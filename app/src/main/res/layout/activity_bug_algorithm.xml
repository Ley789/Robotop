<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alexander.robotop.BugAlgorithmActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bug0 F"
        android:id="@+id/btn_bug0f"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp"
        android:onClick="onButtonBug0f"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bug0"
        android:id="@+id/btn_bug0"
        android:layout_alignTop="@+id/btn_bug0f"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonBug0"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xAchse"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:inputType="number|numberSigned" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yAchse"
        android:layout_below="@+id/xAchse"
        android:layout_alignParentStart="true"
        android:inputType="numberSigned" />
</RelativeLayout>
